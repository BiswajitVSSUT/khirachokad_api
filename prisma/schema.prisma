generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model shop{
  id                          String                 @default(uuid())     @id
  name                        String   
  description                 String
  logo                        String
  contactNumber               Int
  contactNumber2              Int?
  contactEmail                String
  contactEmail2               String?
  coordinates                 String // for google map ifreame
  postalCode                  String?
  blockName                   String?
  district                    String?

  
  
  products                   products[]
  reviews                    review[]
}

model admin {
  id                         String                     @id         @default(uuid())
  name                       String
  email                      String                     @unique
  password                   String
  avatar                     String

  products products[]
}

model products {
  id                          String                    @id @default(uuid())
  name                        String
  description                 String
  price                       String
  image                       String
  image2                      String
  adminId                     String
  shopId                      String
  verificationId              String                    @unique
  expairyDate                 DateTime
  createdAt                   DateTime                  @default(now())
  updatedAt                   DateTime                  @default(now())

  admin                       admin                     @relation(fields: [adminId], references: [id])
  shop                        shop                      @relation(fields: [shopId],references: [id])

  @@index([name, price])
}


model review{
  id                          String                     @id   @default(uuid())
  revieweeName                String
  revieweeEmail               String                     @unique
  review                      String
  rating                      Int                        @default(0)
  shopId                      String
  createdAt                   DateTime                   @default(now())
  updatedAt                   DateTime                   @default(now())

  shop                        shop                       @relation(fields: [shopId],references: [id])


  @@index([revieweeName,revieweeEmail,rating])

}